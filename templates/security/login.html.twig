{% block stylesheets %}
    <link href="{{ asset('css/base.css')}}" rel="stylesheet">
    <link href="{{ asset('css/form.css')}}" rel="stylesheet">
{% endblock %}
{% block body %}
    <header id="disconnect">
        <div>
            <h1>Anniversaire</h1>
        </div>
    </header>
    <form method="post" id="connect_form">
    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        {% if error %}
            <div class="alert alert-danger">Nom de compte ou mot de passe incorrect</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                <p>Vous êtes connecté à {{ app.user.userIdentifier }}</p>
                <button><a href="{{ path('app_logout') }}">Déconnecter</a></button>
            </div>
        {% endif %}
        <div>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <div>
            <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
            <button><a href="{{ path('app_anniversary') }}">Annuler</a></button>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </form>
{% endblock %}
